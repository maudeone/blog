<div class="title-container">
<h1>Articles</h1>
<p>Our blog has <%= Article.public_count %> articles and counting!<br></p>
<%= link_to "New Article", new_article_path, class: "btn btn-default" %>
</div>

<div class="articles">
  <% @articles.each do |article| %>
    <div class="article">
      <div class="thumbnail">
        <div class="caption">
          <% unless article.archived? %>
          <h3><%= link_to truncate(article.title), article %></h3>
          <p><%= truncate(article.body, length: 150) %></p>
          <% end %>
        </div>
      </div>
    <div>  
  <% end %>
</div>


